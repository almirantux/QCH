<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"
        android:rowCount="12">

        <TextView
            android:id="@+id/txnombre"
            android:layout_width="55dp"
            android:layout_height="21dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="@string/Nombre"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nombre"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txrut"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/Rut"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rut"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dv"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textStyle="bold" />
        </LinearLayout>


        <TextView
            android:id="@+id/txfechanacimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/FN"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fechanacimiento"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txemail"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:text="@string/Email"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txmovil"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="@string/Movil"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/movil"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txedad"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:text="@string/Edad"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edad"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="5"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txgenero"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="6"
            android:text="@string/Genero"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/genero"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="6"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txpeso"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="7"
            android:text="@string/Peso"
            android:textStyle="bold"  />

        <TextView
            android:id="@+id/peso"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="7"
            android:textStyle="bold"  />

        <TextView
            android:id="@+id/txestatura"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_row="8"
            android:layout_column="0"
            android:text="@string/Estatura"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/estatura"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="8"
            android:textStyle="bold"  />

        <TextView
            android:id="@+id/tximc"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="9"
            android:text="@string/IMC"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/imc"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="9"
            android:textStyle="bold"  />

        <TextView
            android:id="@+id/txfechaficha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="10"
            android:layout_column="0"
            android:text="@string/FechaFicha"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fechaficha"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="10"
            android:textStyle="bold"  />

    </GridLayout>

</LinearLayout>